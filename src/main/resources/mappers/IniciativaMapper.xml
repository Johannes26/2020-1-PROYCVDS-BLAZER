<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.persistencia.mybatisimpl.mappers.IniciativaMapper">

    <select parameterType="map" id="consultarIniciativa" resultMap="IniciativaResult">
        select
	        u.num,
	        u.descripcion,
	        u.usuarioProponente,
	        u.palabrasClave
        from INICIATIVA u
        WHERE u.num=#{num};
    </select>

    <resultMap type='Iniciativa' id='IniciativaResult'>
        <id property='num' column='num'/>
        <result property='descripcion' column='descripcion'/>
        <result property='usuarioProponente' column='usuarioProponente'/>
        <result property='palabrasClave' column='palabrasClave'/>
        
    </resultMap>


</mapper>